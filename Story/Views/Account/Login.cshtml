@model LoginViewModel
@{
  
}

        
            <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                <div class="card text-bg-light mb-3 raunded" 18rem;">
                    <div class="card-header">
                        <div class="text-center">
                            <i class="fa fa-user fa-4x"></i>
                            <h4>Admin Girişi</h4>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" asp-validation-summary="All"></div>
                        }
                        <hr />
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label"></label>
                                <input class="form-control" asp-for="UserName">
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input class="form-control" asp-for="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" asp-for="IsPersistent">
                                <label class="form-check-label" asp-for="IsPersistent"></label>
                            </div>
                            <button type="submit" class="btn btn-primary">Giriş</button>
                        </form>

                        </div>
                    </div>
                </div>

