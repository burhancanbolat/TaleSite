@model RegisterViewModel
@{
    ViewData["title"] = "Yeni Üyelik";

}
<hr />
<div class="row">
    <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
       <img src="~/upconstruction/assets/img/masal_oku.jpg" /> 
    </div>
    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
        <div class="card text-bg-light mb-3 raunded" 18rem;">
            <div class="card-header">
                <div class="text-center">
                    <i class="fa fa-user fa-4x"></i>
                    <h4>Kullanıcı Girişi</h4>
                </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" asp-validation-summary="All"></div>
                }
                <hr />
                <div class="card-body">
                    <form method="post">

                        <div class="form-group">
                            <label asp-for="Name">Ad-Soyad</label>
                            <input class="form-control" asp-for="Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">E-Posta</label>
                            <input class="form-control" asp-for="Email">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Telefon Numarası</label>
                            <input class="form-control" asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>


                        <hr />
                        <button type="submit" class="btn btn-outline-warning">Kaydol</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}