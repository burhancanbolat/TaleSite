@model Tale
@{
    ViewData["title"] = "Masal Güncelleme";
}
<div class="card">
    <div class="card-body">
        <h2>
            @ViewData["title"]
        </h2>


        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Photo" />
            

            <div class="mb-3">
                <label class="form-label" asp-for="Title"></label>
                <input class="form-control" asp-for="Title" placeholder="Masal Başlığı Yazınız...">
                <span asp-validation-for="Title"></span>
            </div>
             <div class="mb-3">
               <label class="form-label" asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control" placeholder="Masal İçeriğini Giriniz" id="Text" style="height: 100px"></textarea>
                <span asp-validation-for="Text"></span>

            </div>
            
            <div class="mb-3">
                <div class="py-3">
                    <img src="@Model.Photo" height="240" />
                </div>
                <div class="text-info">(Değiştirmek istiyorsanız seçiniz)</div>
                <label for="formFile" class="form-label" asp-for="Photo"></label>
                <input class="form-control" type="file" id="PhotoFile" name="PhotoFile">
            </div>
        
            <hr />
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
            <a class="btn btn-primary" asp-action="Index">İptal</a>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {


    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        $(() => {
            $('.summernote').summernote({
                height: 200
            });
        })
    </script>
}
